<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50911E"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/applogo" />

        <EditText
            android:id="@+id/edt_user_reset"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/botron_edt"
            android:drawableStart="@drawable/me2"
            android:gravity="center"
            android:hint="Nhập tên tài khoản" />

        <EditText
            android:id="@+id/edt_pass1_reset"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/botron_edt"
            android:drawableStart="@drawable/pass"
            android:gravity="center"
            android:hint="Nhập mật khẩu mới "
            android:inputType="textPassword"
            android:pointerIcon="cell" />

        <EditText
            android:id="@+id/edt_pass2_reset"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/botron_edt"
            android:drawableStart="@drawable/ic_baseline_check_24"
            android:gravity="center"
            android:hint="Nhập lại mật khẩu mới  "
            android:inputType="textPassword"
            android:pointerIcon="cell" />

        <Button
            android:id="@+id/btn_reset_pass"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/botron_btn"
            android:text="Đặt lại mật khẩu"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>






</LinearLayout>